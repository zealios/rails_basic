<% if @category.errors.any? %>
	<% @category.errors.full_messages.each do |errMsg| %>
		<div class="alert alert-danger alert-dismissable">
			<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
			<strong>Error!</strong>&nbsp;<%= errMsg %>
		</div>
	<% end %>
<% end %>
<%= form_for @category, :html => { :class => "form-horizontal" } do |f| %>
	<fieldset>
		<div class="form-group">
			<%= f.label :text, class: "control-label" %>
			<%= f.text_field :text, class: "form-control", placeholder: "Category text" %>	
		</div>		
		<div class="form-group" style="text-align: center">
			<%= f.submit class: "btn btn-primary" %>
			<%= link_to "Cancel", categories_path, { class: "btn btn-default" } %>
		</div>
	</fieldset>
<% end %>