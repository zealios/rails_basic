<% if @content.errors.any? %>
	<% @content.errors.full_messages.each do |errMsg| %>
		<div class="alert alert-danger alert-dismissable">
			<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
			<strong>Error!</strong>&nbsp;<%= errMsg %>
		</div>
	<% end %>
<% end %>
<%= form_for @content, :html => { :class => "form-horizontal" } do |f| %>
	<fieldset>
		<div class="form-group">
			<%= f.label :title, class: "control-label" %>
			<%= f.text_field :title, class: "form-control", placeholder: "Content title" %>	
		</div>
		<div class="form-group">
			<%= f.label :subtitle, class: "control-label" %>
			<%= f.text_field :subtitle, class: "form-control", placeholder: "Content subtitle" %>	
		</div>
		<div class="form-group">
			<%= f.label :category_id, class: "control-label" %>
			<%= collection_select(:content, :category_id, @categories.all, :id, :text, {}, { class: "form-control" } ) %>
		</div>
		<div class="form-group">
			<%= f.label :text, class: "control-label" %>
			<%= f.text_area :text, class: "form-control", placeholder: "Content text" %>	
		</div>
		<div class="form-group" style="text-align: right">
			<%= f.submit class: "btn btn-primary" %>
			<%= link_to "Cancel", contents_path, { class: "btn btn-default" } %>
		</div>
	</fieldset>
<% end %>